<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateProfile"
android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="363dp"
        android:layout_height="28dp"
        android:text="Update your profile here"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="30dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="434dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="69dp">

        <EditText
            android:id="@+id/etUPUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Name"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="164dp" />

        <EditText
            android:id="@+id/etUPFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="First Name"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="164dp" />

        <EditText
            android:id="@+id/etUPLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Last Name"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="237dp" />

        <EditText
            android:id="@+id/etUPGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Gender"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="290dp" />

        <EditText
            android:id="@+id/etUPMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Mobile"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="344dp" />

        <EditText
            android:id="@+id/etUPWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Weight"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="396dp" />

        <EditText
            android:id="@+id/etUPHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Height"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="449dp" />

        <EditText
            android:id="@+id/etUPEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="449dp" />

        <TextView
            android:id="@+id/etUPBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="BMI"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="449dp" />

        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="455dp" />



    </LinearLayout>


</LinearLayout>